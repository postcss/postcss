{
  "name": "postcss",
  "version": "7.0.26",
  "description": "Tool for transforming styles with JS plugins",
  "engines": {
    "node": ">=10.0.0"
  },
  "keywords": [
    "css",
    "postcss",
    "rework",
    "preprocessor",
    "parser",
    "source map",
    "transform",
    "manipulation",
    "transpiler"
  ],
  "scripts": {
    "clean": "rimraf ./docs/api/index.html ./docs/api/assets/",
    "spell": "./docs/api/generate.js && yaspeller-ci ./docs/api/*.html *.md docs/{**/,}*.md",
    "test": "jest && eslint-ci . && ./test/integration.js && yarn spell && size-limit"
  },
  "funding": {
    "type": "tidelift",
    "url": "https://tidelift.com/funding/github/npm/postcss"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://postcss.org/",
  "repository": "postcss/postcss",
  "dependencies": {
    "chalk": "^3.0.0",
    "line-column": "^1.0.2",
    "nanoid": "^2.1.10",
    "source-map": "^0.6.1",
    "supports-color": "^7.1.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^35.0.3",
    "@logux/sharec-config": "^0.5.6",
    "@size-limit/preset-small-lib": "^3.0.0",
    "ci-job-number": "^0.3.1",
    "clean-publish": "^1.1.4",
    "concat-with-sourcemaps": "^1.1.0",
    "documentation": "^12.1.4",
    "documentation-theme-light": "^1.1.1",
    "eslint": "^6.8.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^15.0.1",
    "fs-extra": "^8.1.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.3",
    "postcss-parser-tests": "^6.5.0",
    "rimraf": "^3.0.0",
    "strip-ansi": "^6.0.0",
    "yaspeller-ci": "^1.0.1"
  },
  "main": "lib/postcss",
  "types": "lib/postcss.d.ts",
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browser": {
    "./lib/terminal-highlight": false,
    "supports-color": false,
    "chalk": false,
    "fs": false
  },
  "size-limit": [
    {
      "path": "lib/postcss.js",
      "limit": "27 KB"
    }
  ],
  "jest": {
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/node",
    "rules": {
      "consistent-return": "off",
      "global-require": "off"
    },
    "overrides": [
      {
        "files": [
          "lib/tokenize.js"
        ],
        "rules": {
          "unicorn/regex-shorthand": "off"
        }
      },
      {
        "files": [
          "*.test.js"
        ],
        "rules": {
          "no-unused-expressions": "off",
          "func-style": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "docs/api/assets/"
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "excludeFiles": [
      "docs/README-cn.md"
    ],
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "6to5",
      "A CI",
