{
  "name": "postcss",
  "version": "8.1.10",
  "description": "Tool for transforming styles with JS plugins",
  "engines": {
    "node": "^10 || ^12 || >=14"
  },
  "exports": {
    ".": {
      "require": "./lib/postcss.js",
      "import": "./lib/postcss.mjs",
      "types": "./lib/postcss.d.ts"
    },
    "./": "./"
  },
  "main": "./lib/postcss.js",
  "types": "./lib/postcss.d.ts",
  "keywords": [
    "css",
    "postcss",
    "rework",
    "preprocessor",
    "parser",
    "source map",
    "transform",
    "manipulation",
    "transpiler"
  ],
  "scripts": {
    "test": "jest --coverage && eslint . && ./test/version.js && check-dts && ./test/integration.js && yaspeller *.md docs/{**/,}*.md && size-limit"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/postcss/"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://postcss.org/",
  "repository": "postcss/postcss",
  "dependencies": {
    "colorette": "^1.2.1",
    "nanoid": "^3.1.18",
    "source-map": "^0.6.1",
    "vfile-location": "^3.2.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^42.2.2",
    "@size-limit/preset-small-lib": "^4.9.0",
    "@types/fs-extra": "^9.0.4",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "check-dts": "^0.4.1",
    "ci-job-number": "^1.2.2",
    "clean-publish": "^1.1.8",
    "concat-with-sourcemaps": "^1.1.0",
    "documentation": "^13.1.0",
    "documentation-theme-light": "^1.1.1",
    "eslint": "^7.14.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.14.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^23.0.0",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "nanodelay": "^1.0.6",
    "postcss-parser-tests": "^8.3.3",
    "size-limit": "^4.9.0",
    "strip-ansi": "^6.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2",
    "yaspeller": "^7.0.0"
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix",
    "*.ts": "eslint --fix",
    "package.json": "./test/version.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browser": {
    "./lib/terminal-highlight": false,
    "colorette": false,
    "fs": false
  },
  "size-limit": [
    {
      "path": "lib/postcss.js",
      "limit": "33 KB"
    }
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "consistent-return": "off",
      "global-require": "off"
    },
    "overrides": [
      {
        "files": [
          "*.test.js"
        ],
        "rules": {
          "no-unused-expressions": "off",
          "func-style": "off"
        }
      },
      {
        "files": [
          "*.test.ts"
        ],
        "rules": {
          "@typescript-eslint/no-unused-expressions": "off",
          "func-style": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "docs/api/assets/"
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "excludeFiles": [
      "docs/README-cn.md"
    ],
    "ignoreText": [
      " \\(by [^)]+\\).",
      "“[^”]+”"
    ],
    "dictionary": [
      "6to5",
      "A CI",
      "Andalusian",
      "ASE",
      "autodetect",
      "Autodetect",
      "Autoprefixer",
